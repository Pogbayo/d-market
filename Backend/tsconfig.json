{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".", // Set base URL to the root of your project
    "paths": {
      "@models/*": ["src/models/*"], // Alias for models folder
      "@src/*": ["src/*"] // Alias for src folder (optional, but useful)
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
